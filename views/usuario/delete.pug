        input.mb-2.form-control(type='text',value=usuarios.estado, name='estado', id='estado', autofocus, autocomplete='estado',  readonly)
      
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='cidade') Cidade
      .col-md-7
        input.mb-2.form-control(type='text',value=usuarios.cidade, name='cidade', id='cidade', autofocus, autocomplete='cidade',  readonly)

    .offset-sm-3.col-md-7.pl-2
