extends ../layout

block content
  
  .pb-2.mt-2.mb-4.border-bottom 
    h3.pl-4 Remover Cadastro
  
  form.pl-4(action='/usuario/delete', method='POST', onsubmit="return confirm('Are you sure you want to delete your account?');")
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='nome') Nome
      .col-md-7
        input.mb-2.form-control(type='text', value=usuarios.nome, name='nome', id='nome', autofocus, autocomplete='nome',  readonly)
      
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='telefone') Telefone
      .col-md-7
        input.mb-2.form-control(type='text',value=usuarios.tel, name='telefone', id='telefone', autofocus, autocomplete='telefone', readonly)
      
