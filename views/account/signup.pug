extends ../layout

block content
  .pb-2.mt-2.mb-4.border-bottom
    h3 Sign up
  form(id='signup-form', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='email') Email
      .col-md-7
        input.form-control(type='email', name='email', id='email', placeholder='Email', autofocus, autocomplete='email', required)
      
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='telefone') Telefone
      .col-md-7
        input.form-control(type='text', name='telefone', id='telefone', placeholder='(85) 999999999', autofocus, autocomplete='telefone', required)
      
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='nascimento') Data de Nascimento
      .col-md-7
        input.form-control(type='text', name='nascimento', id='nascimento', placeholder='01/01/2000', autofocus, autocomplete='nascimento', required)
      
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='rg') RG
      .col-md-7
        input.form-control(type='text', name='rg', id='rg', placeholder='2007000000-0', autofocus, autocomplete='rg', required)
      
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='cpf') CPF
      .col-md-7
        input.form-control(type='text', name='cpf', id='cpf', placeholder='000.000.000-00', autofocus, autocomplete='cpf', required)
      
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='endereco') Endereço
      .col-md-7
        input.form-control(type='text', name='endereco', id='endereco', placeholder='Endereço', autofocus, autocomplete='endereco', required)
      
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='cidade') Cidade
      .col-md-7
        input.form-control(type='text', name='cidade', id='cidade', placeholder='Cidade', autofocus, autocomplete='cidade', required)
      
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='estado') Estado
      .col-md-7
        input.form-control(type='text', name='estado', id='estado', placeholder='ex.: CE ou Ceará', autofocus, autocomplete='estado', required)
      
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='cep') CEP
      .col-md-7
        input.form-control(type='text', name='cep', id='cep', placeholder='ex.: 60.000-000', autofocus, autocomplete='estado', required)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='password') Password
      .col-md-7
        input.form-control(type='password', name='password', id='password', placeholder='Password', autocomplete='new-password', required)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='confirmPassword') Confirm Password
      .col-md-7
        input.form-control(type='password', name='confirmPassword', id='confirmPassword', placeholder='Confirm Password', autocomplete='new-password', required)
    .form-group.offset-sm-3.col-md-7.pl-2
      button.btn.btn-success(type='submit')
        i.fas.fa-user-plus.fa-sm
        | Signup
